@model List<Module>
<partial name="_Notification" />

<div class="container">


    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h1 style="color: #6b9080; font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif" class=" fw-bold">
                Module List
            </h1>
        </div>

        <div class=" col-3 text-end ">
            <a asp-controller="Module" asp-action="Graph" class="btn  btn btn-outline-dark">
                <i class="bi bi-bar-chart-fill"></i> Hours Spent on Modules
            </a>
        </div>

        <div class="col-3 text-end">
            <a asp-controller="Module" asp-action="Create" class="btn  btn btn-outline-dark">
                <i class="bi bi-plus-circle "></i> Add New Module
            </a>
        </div>

    </div>

    <div class="table-responsive">
        <table class="table table-hover table-striped">
            <thead>
                <tr class="table-primary">

                    <th scope="row">
                        Code
                    </th>
                    <th>
                        Name
                    </th>
                    <th>
                        Credits
                    </th>
                    <th>
                        Class Hrs PW
                    </th>
                    <th>
                        Semester Weeks
                    </th>
                    <th>
                        Start Date
                    </th>
                    <th>
                        Date Studied
                    </th>
                    <th>
                        Hours Studied
                    </th>
                    <th>
                        Self Study hours
                    </th>
                    <th>
                        Remaining study hours
                    </th>

                    <th></th>

                </tr>
            </thead>
            <tbody>
                @* Displays the list of categories from the database *@
                @foreach (var obj in Model.OrderBy(u => u.Module_code))
                {
                    <tr class="table-default">
                        <td>@obj.Module_code</td>
                        <td>@obj.Module_Name</td>
                        <td>@obj.Num_credits</td>
                        <td>@obj.Class_hours_per_week</td>
                        <td>@obj.Num_weeks_in_semester</td>
                        <td>@obj.Semester_start_date</td>
                        <td>@obj.Studied_on_certin_date</td>
                        <td style="color:lightblue">@obj.Hours_Studied_On_CertinDate</td>
                        <td>@obj.Self_Study_hours</td>
                        <td>@obj.Remaining_study_hours</td>

                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Module" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-outline-info mx-2 ">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a asp-controller="Module" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-outline-danger mx-2 ">
                                    <i class="bi bi-trash-fill"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>


</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

